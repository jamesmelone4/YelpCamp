<% include ../partials/header %>

<div class="row">
	<h1 style="text-align: center">Edit Comment for '<%= campground.name %>' Campground</h1>
	<div style="width: 30%; margin: 25px auto;">
		<form action="/campgrounds/<%= campground._id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
			<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
			</div>
		</form>
		<a href="/campgrounds/<%= campground._id %>">Go Back</a>
	</div>
</div>	

<% include ../partials/footer %>